@model Category

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Category</h2>
            <hr />
        </div>
        <div asp-validation-summary="ModelOnly" class="text-warning"></div> <!-- Only displays errors in the Model and not the properties themselves  -->
        <div class="mb-3 p-1">
            <label asp-for="Name"></label>
            <input type="text" asp-for="Name" placeholder="Category Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3 p-1">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" placeholder="Display Order" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <div class="my-3 p-2">
            <button type="submit" class="btn btn-success my-2 me-3">Update</button>
            <a class="btn btn-outline-danger my-2" asp-action="Index">Cancel Update</a>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}