@model ComicBook

<form method="post">
    <div class="card shadow border-0 my-4">
        <div class="card-header bg-secondary bg-gradient text-light py-4">
            <div class="row">
                <div class="col-12 text-center">
                    <h3 class="text-white text-uppercase">@Model.Title</h3>
                    <p class="text-white-50 fw-semibold mb-0">by @Model.Author</p>
                </div>
            </div>
        </div>
        <div class="card-body bg-dark bg-gradient shadow">
            <div class="py-3">
                <div class="row">
                    <div class="col-6 col-md-2 offset-lg-1 pb-1">
                        <a asp-action="Index" class="btn btn-primary bg-gradient mb-5 fw-semibold btn-sm text-uppercase">
                            <small>Back to Home</small>
                        </a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-lg-3 offset-lg-1 text-center mb-3">
                        <img src="@Model.ImageUrl" width="100%" class="rounded" />
                    </div>
                    <div class="col-12 col-lg-6 offset-lg-1">
                        <div class="col-12 col-md-6 pb-4">
                            <span class="badge text-bg-primary"><i class="bi bi-lightning-fill"></i> @Model.Category.Name</span>
                        </div>
                        <div class="row ps-2">
                            <h6 class="text-info py-2 text-opacity-75"><strong>Publisher:</strong> @Model.Publisher</h6>
                        </div>
                        <div class="row ps-2">
                            <h5 class=" text-light text-opacity-75 pb-2">
                                Cover Price: 
                                <span class="text-decoration-line-through"> @Model.CoverPrice.ToString("c")</span>
                            </h5>
                        </div>
                        <div class="row ps-2">
                            <h4 class="text-opacity-75 pb-2 fw-bold">
                                List Price: @Model.ListPrice.ToString("c")
                            </h4>
                        </div>
                        <div class="row ps-2 my-3">
                            <p class="text-opacity-50 text-white lh-sm pb-2">@Html.Raw(Model.Description)</p>
                        </div>
                        <div class="row ps-2 mb-3">
                            <div class="col-md-4">
                                <a class="btn btn-primary" href="https://www.amazon.com/s?k=@Model.Title.Replace(":", "").ToUpper()&i=stripbooks" target="_blank">Search on Amazon</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>